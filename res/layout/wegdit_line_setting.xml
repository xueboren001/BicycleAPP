<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
	    android:id="@+id/boren_rl_my_line"
	    android:addStatesFromChildren="true"
	    android:layout_width="match_parent"
	    android:layout_height="55dp"
	    android:paddingLeft="15dp"
	    android:paddingRight="15dp"
	    android:layout_marginTop="15dp"
	    android:background="#FFFFFF">
	    <ImageView 
	        android:id="@+id/boren_rl_my_line_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:background="@drawable/icon_blog"/>
	    <TextView 
	        android:id="@+id/boren_rl_my_line_tv"
	        android:layout_toRightOf="@+id/boren_rl_my_line_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_centerVertical="true"
	        android:textSize="18sp"
	        android:text="setting..."/>
	    <TextView 
	        android:id="@+id/boren_rl_my_line_tv_number"
	        android:layout_toLeftOf="@+id/boren_rl_my_line_iv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="10dp"
	        android:layout_centerVertical="true"
	        android:textColor="#DDDDDD"
	        android:text="10"
	        android:textSize="15sp"/>
	    <ImageView 
	        android:id="@+id/boren_rl_my_line_iv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	         android:layout_centerVertical="true"
	        android:background="@drawable/boren_nav_image_click_bg"/>
	</RelativeLayout>    
</LinearLayout>
